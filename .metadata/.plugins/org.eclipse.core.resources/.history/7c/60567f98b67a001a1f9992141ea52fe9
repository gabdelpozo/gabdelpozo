int edad[5];
int i;

while (1)
{
	if(utn_getNumero(&edad[i],"Ingrese edad:","Esta edad no va\n",1,120,3)==0)
	{
		printf("Se guardo la edad en pos:%d\n",i);

	}

	else if
	{
		printf("La edad es: %d - pos %d",edad[i],i);
	}
	else if
	{
		i==5;
		break;
	}


}
return EXIT_SUCCESS;
}
