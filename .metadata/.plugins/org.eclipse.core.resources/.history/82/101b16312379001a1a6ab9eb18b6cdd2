#include <stdio.h>
#include <stdlib.h>
#include <time.h>

/**
 * \brief Solicita un numero al usuario y devuelve el resultado.
 * \param mensaje Es el mensaje a ser mostrado.
 * \return El numero ingresado por el usuario.
 *
 */

int getRadio(char mensaje[])
{
	int buffer;
	printf("%s",mensaje);
	scanf("%d",&buffer);
	return buffer;
}

/**
 * \brief Solicita dos numeros al usuario y devuelve el resultado.
 * \param Hace la operacion calcular area de circulo.
 * \return El area del circulo.
 *
 */
float calcularArea(float operador1,float operador2,float resul)
{
	resul = operador2 * operador1 * operador1;
	printf("El area del circulo es: %.2f\n",resul);
	return resul;
}

